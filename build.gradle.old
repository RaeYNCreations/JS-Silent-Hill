buildscript {
    repositories {
        maven { url = 'https://maven.neoforged.net/releases' }
        mavenCentral()
        maven { url = 'https://plugins.gradle.org/m2/' }  // Add this line
    }
    dependencies {
        classpath 'net.neoforged.gradle:userdev:7.0.80'
    }
}

apply plugin: 'net.neoforged.gradle.userdev'
apply plugin: 'java'
apply plugin: 'eclipse'
apply plugin: 'idea'

version = '3.0.0-1.21.1'
group = 'com.jsart.silenthill'

java.toolchain.languageVersion = JavaLanguageVersion.of(21)

base {
    archivesName = 'silenthill'
}

minecraft {
    mappings channel: 'official', version: '1.21.1'
    
    runs {
        client {
            workingDirectory project.file('run')
            property 'forge.logging.markers', 'REGISTRIES'
            property 'forge.logging.console.level', 'debug'
            mods {
                silenthill {
                    source sourceSets.main
                }
            }
        }
        server {
            workingDirectory project.file('run')
            property 'forge.logging.markers', 'REGISTRIES'
            property 'forge.logging.console.level', 'debug'
            mods {
                silenthill {
                    source sourceSets.main
                }
            }
        }
    }
}

repositories {
    mavenCentral()
    maven { url = 'https://maven.neoforged.net/releases' }
}

dependencies {
    minecraft 'net.neoforged:neoforge:21.1.73'
}

jar {
    manifest {
        attributes([
                'Specification-Title'     : 'Silent Hill',
                'Specification-Vendor'    : 'J.S.art',
                'Specification-Version'   : '1',
                'Implementation-Title'    : project.name,
                'Implementation-Version'  : project.jar.archiveVersion,
                'Implementation-Vendor'   : 'J.S.art',
                'Implementation-Timestamp': new Date().format("yyyy-MM-dd'T'HH:mm:ssZ")
        ])
    }
}

tasks.withType(JavaCompile).configureEach {
    options.encoding = 'UTF-8'
}
